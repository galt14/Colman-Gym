@model IEnumerable<Meeting>

@{
    ViewData["Title"] = "Meetings";
}

<h1>Meetings</h1>

@if (this.User.IsInRole("Admin") || this.User.IsInRole("Trainer"))
{
    <p>
        <a class="button" asp-controller="Meetings" asp-action="Create">Create New</a>
    </p>
}

<div class="colman-gym-card">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Topic
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Trainer)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Date)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Training.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Trainer.FirstName) @Html.DisplayFor(modelItem => item.Trainer.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        <a class="button">
                            @Html.ActionLink("Edit", "Edit", new { controller = "Meetings", id = item.MeetID }, new { @class = "button" })
                        </a>
                        <a class="button">
                            @Html.ActionLink("Details", "Details", new { controller = "Meetings", id = item.MeetID }, new { @class = "button" })
                        </a>
                        <a class="warning-button">
                            @Html.ActionLink("Delete", "Delete", new { controller = "Meetings", id = item.MeetID }, new { @class = "warning-button" })
                        </a>

                    </td>

                </tr>
            }
        </tbody>
    </table>

</div>
