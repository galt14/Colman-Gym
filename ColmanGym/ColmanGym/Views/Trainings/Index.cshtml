@model IEnumerable<ColmanGym.Models.Training>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Target)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Target)
            </td>
            <td>
                <a class="button" asp-action="Edit" asp-route-id="@item.TrainingId">Edit</a> |
                <a class="button" asp-action="Details" asp-route-id="@item.TrainingId">Details</a> |
                <a class="warning-button" asp-action="Delete" asp-route-id="@item.TrainingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
